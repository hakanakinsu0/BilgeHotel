@model EmployeeDeleteResponseModel

@{
    ViewData["Title"] = "Çalışan Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>🗑️ Çalışanı Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Aşağıdaki çalışanı silmek üzeresiniz. Bu işlem geri alınamaz.
</div>

<div class="mb-3">
    <label class="form-label">Ad Soyad:</label>
    <p class="form-control-plaintext">@Model.FirstName @Model.LastName</p>
</div>

<div class="mb-3">
    <label class="form-label">Pozisyon:</label>
    <p class="form-control-plaintext">@Model.Position</p>
</div>

<div class="mb-3">
    <label class="form-label">Telefon:</label>
    <p class="form-control-plaintext">@Model.PhoneNumber</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2 mt-4">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Evet, Sil
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> İptal
        </a>
    </div>
</form>

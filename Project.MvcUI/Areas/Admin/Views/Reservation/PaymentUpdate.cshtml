@model Project.MvcUI.Areas.Admin.Models.RequestModels.Reservations.ReservationPaymentUpdateRequestModel

@{
    ViewData["Title"] = "💳 Ödeme Durumu Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>💳 Ödeme Durumu Güncelle</h2>
<p>Bu sayfadan rezervasyonun ödeme durumunu güncelleyebilirsiniz.</p>

<form asp-action="PaymentUpdate" method="post">
    <input type="hidden" asp-for="ReservationId" />

    <div class="mb-3">
        <label class="form-label">Müşteri Adı</label>
        <input class="form-control" value="@Model.CustomerName" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Oda Numarası</label>
        <input class="form-control" value="@Model.RoomNumber" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="NewStatus" class="form-label">Yeni Ödeme Durumu</label>
        <select asp-for="NewStatus" asp-items="ViewBag.PaymentStatuses" class="form-control"></select>
        <span asp-validation-for="NewStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

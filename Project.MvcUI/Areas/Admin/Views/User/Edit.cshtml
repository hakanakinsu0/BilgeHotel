@using Project.MvcUI.Areas.Admin.Models.RequestModels.AppUsers
@model UpdateUserRequestModel

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <!-- Ad -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <!-- Soyad -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <!-- E-posta (readonly) -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <!-- Telefon Numarası -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" type="tel" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <!-- Adres -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <!-- Uyruğu -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="Nationality" class="form-label"></label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
        </div>

        <!-- Kimlik Numarası -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="IdentityNumber" class="form-label"></label>
                <input asp-for="IdentityNumber" class="form-control" />
                <span asp-validation-for="IdentityNumber" class="text-danger"></span>
            </div>
        </div>

        <!-- Cinsiyet -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-control"
                        asp-items="Html.GetEnumSelectList<Project.Entities.Enums.Gender>()">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <!-- Rol Seçimi -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" asp-items="ViewBag.Roles" class="form-control">
                    <option value="">Rol Seçiniz</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>

        <!-- Kullanıcı Durumu (Aktif / Pasif) -->
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                <label asp-for="IsActive" class="form-label"></label>
                <select asp-for="IsActive" class="form-control">
                    <option value="true" selected="@Model.IsActive">Aktif</option>
                    <option value="false" selected="@(!Model.IsActive)">Pasif</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <!-- Client-side validation scripts partial -->
    <partial name="_ValidationScriptsPartial" />
}

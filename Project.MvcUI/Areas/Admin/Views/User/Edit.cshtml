@model Project.MvcUI.Areas.Admin.Models.RequestModels.UpdateUserRequestModel

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <!-- Ad -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Ad</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <!-- Soyad -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyad</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <!-- E-posta -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" type="email" class="form-control" readonly /> <!-- E-posta değiştirilemez -->
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <!-- Telefon Numarası -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                <input asp-for="PhoneNumber" type="tel" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <!-- Adres -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Address" class="form-label">Adres</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <!-- Uyruğu -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Nationality" class="form-label">Uyruğu</label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
        </div>

        <!-- Kimlik Numarası -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="IdentityNumber" class="form-label">Kimlik Numarası</label>
                <input asp-for="IdentityNumber" class="form-control" />
                <span asp-validation-for="IdentityNumber" class="text-danger"></span>
            </div>
        </div>

        <!-- Cinsiyet -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Cinsiyet</label>
                <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Project.Entities.Enums.Gender>()">
                    <option value="">Seçiniz</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <!-- Rol Seçimi -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Role" class="form-label">Rol</label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                    <option value="">Rol Seçiniz</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>

    </div>

    <!-- Kullanıcıyı Aktif Yap Seçeneği -->
    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="IsActive" class="form-label">Kullanıcıyı Aktif Yap</label>
            <select asp-for="IsActive" class="form-control">
                <option value="true">Evet</option>
                <option value="false">Hayır</option>
            </select>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

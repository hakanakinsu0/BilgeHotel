@model ChangePasswordRequestModel

@{
    ViewData["Title"] = "Kullanıcı Şifresi Değiştir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>🔑 Kullanıcı Şifresi Değiştir</h2>

<!-- Başarılı/Hata Mesajları -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>Bu sayfadan kullanıcının şifresini değiştirebilirsiniz.</p>

<form asp-action="ChangePassword" method="post">
    <input type="hidden" asp-for="Id" />

    <!-- Mevcut Şifre -->
    <div class="mb-3">
        <label asp-for="CurrentPassword" class="form-label">Mevcut Şifre</label>
        <input asp-for="CurrentPassword" type="password" class="form-control" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <!-- Yeni Şifre -->
    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
        <input asp-for="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <!-- Yeni Şifre Tekrar -->
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@model ChangePasswordRequestModel

@{
    ViewData["Title"] = "Kullanıcı Şifresi Değiştir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>🔑 Kullanıcı Şifresi Değiştir</h2>

<p>Bu sayfadan kullanıcının şifresini değiştirebilirsiniz.</p>

<form asp-action="ChangePassword" method="post">
    <input type="hidden" asp-for="Id" />

    <!-- Yeni Şifre -->
    <div class="mb-3">
        <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
        <input asp-for="NewPassword" type="password" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <!-- Yeni Şifre Tekrar -->
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

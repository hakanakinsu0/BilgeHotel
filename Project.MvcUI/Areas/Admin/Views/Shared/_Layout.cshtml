<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Admin Panel | Bilge Hotel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        /* Navbar */
        .navbar {
            background-color: #343a40;
        }

            .navbar .nav-link {
                color: white !important;
            }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            height: 100vh;
            padding-top: 20px;
            position: fixed;
        }

            .sidebar .nav-link {
                color: white;
                padding: 10px;
                display: block;
                transition: 0.3s;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
            flex-grow: 1;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Admin/Dashboard/Index">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Siteye Git</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/Auth/Logout">Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h5 class="text-center">Admin Menü</h5>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Reservation/Index"><i class="fa fa-calendar"></i> Rezervasyon Yönetimi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Reports/Index"><i class="fa fa-bar-chart"></i> Raporlar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Users/Index"><i class="fa fa-users"></i> Kullanıcı Yönetimi</a>
                </li>
            </ul>
        </div>

        <!-- Content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap Bundle -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

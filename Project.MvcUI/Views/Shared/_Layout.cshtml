<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Bilge Hotel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Bilge Hotel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Ana Sayfa</a>
                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <!-- Admin kullanıcılarına özel -->
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="/Admin/Dashboard/Index">Admin Paneli</a>
                        </li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Member"))
                    {
                        <!-- Üye kullanıcılar için -->
                        <li class="nav-item">
                            <a href="/Reservation/Create" class="nav-link text-warning">Rezervasyon Yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reservation" asp-action="MyReservations">Rezervasyonlarım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-info" asp-controller="Payment" asp-action="History">Ödeme Geçmişim</a>
                        </li>
                    }
                    else
                    {
                        <!-- Giriş yapmayan kullanıcılar için -->
                        <li class="nav-item">
                            <a href="/Auth/Login?returnUrl=/Reservation/Create" class="nav-link text-warning">Rezervasyon Yap</a>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a href="/Profile/Index" class="nav-link">Profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">Çıkış Yap</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Login">Giriş Yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Register">Kayıt Ol</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()

    </div>

    <footer class="bg-dark text-white text-center p-3 mt-5">
        <p>&copy; 2025 Bilge Hotel | Tüm Hakları Saklıdır.</p>
        <p>📍 Adres: Kemer, Antalya, Türkiye | 📞 Telefon: +90 555 123 45 67 | ✉️ E-posta: info@bilgehotel.com</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

@model UserLoginRequestModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <h2 class="text-center">Giriş Yap</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Login" method="post" class="w-50 mx-auto border p-4 rounded shadow bg-light">
        <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["returnUrl"]" /> <!-- returnUrl Saklandı -->

        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-Posta</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresinizi girin">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Şifre</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi girin">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>

        <div class="mt-3 text-center">
            <p>Hesabınız yok mu? <a href="/Auth/Register">Kayıt Ol</a></p>
        </div>

        <div class="mt-3 text-center">
            <p>Şifrenizi mi unuttunuz? <a href="/Auth/ForgotPassword">Yeni Şifre Oluştur</a></p>
        </div>
    </form>
</div>

@model UserResetPasswordRequestModel

@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="container mt-5">
    <h2 class="text-center">Şifre Sıfırla</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info text-center">
            @TempData["Message"]
        </div>
    }

    <form asp-action="ResetPassword" method="post" class="w-50 mx-auto border p-4 rounded shadow bg-light">
        <input type="hidden" asp-for="Token" />
        <input type="hidden" asp-for="Email" />

        <div class="mb-3">
            <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Yeni şifrenizi girin">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi tekrar girin">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Şifreyi Sıfırla</button>
    </form>
</div>



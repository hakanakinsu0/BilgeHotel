@model ResetPasswordPageViewModel

@{
    ViewData["Title"] = Model.PageTitle; 
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="container mt-5">
        <div class="alert alert-info text-center">
            <h4>@Model.ErrorMessage</h4>  
        </div>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <div asp-validation-summary="All" class="alert alert-danger"></div>
}

<div class="container mt-5">
    <h2 class="text-center">@Model.PageTitle</h2> 
    <p class="text-center">@Model.HelpText</p>  
    <form asp-action="ResetPassword" method="post" class="w-50 mx-auto border p-4 rounded shadow bg-light">
        <input type="hidden" asp-for="ResetPasswordRequest.Token" />
        <input type="hidden" asp-for="ResetPasswordRequest.Email" />

        <div class="mb-3">
            <label asp-for="ResetPasswordRequest.NewPassword" class="form-label"></label>
            <input asp-for="ResetPasswordRequest.NewPassword" type="password" class="form-control" placeholder="Yeni şifrenizi girin" />
            <span asp-validation-for="ResetPasswordRequest.NewPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ResetPasswordRequest.ConfirmPassword" class="form-label"></label>
            <input asp-for="ResetPasswordRequest.ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi tekrar girin" />
            <span asp-validation-for="ResetPasswordRequest.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Şifreyi Sıfırla</button>
    </form>
</div>

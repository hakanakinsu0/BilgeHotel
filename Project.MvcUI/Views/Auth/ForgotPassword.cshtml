@model ForgotPasswordPageViewModel

@{
    ViewData["Title"] = Model.PageTitle;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-info text-center">
        <h4>@Model.ErrorMessage</h4>
    </div>
}

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <div asp-validation-summary="All" class="alert alert-danger mt-5"></div>
}

<form asp-action="ForgotPassword" method="post" class="w-50 mx-auto border p-4 rounded shadow bg-light">
    <div class="mb-3">
        <label asp-for="ForgotPasswordRequest.Email" class="form-label"></label>
        <input asp-for="ForgotPasswordRequest.Email" type="email" class="form-control" placeholder="E-posta adresinizi girin" />
        <span asp-validation-for="ForgotPasswordRequest.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">Şifre Sıfırlama Bağlantısı Gönder</button>
</form>

<div class="mt-3 text-center">
    <p>Hesabınız var mı? <a href="/Auth/Login">Giriş Yap</a></p>
</div>
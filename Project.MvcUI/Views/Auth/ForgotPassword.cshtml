@model UserForgotPasswordRequestModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container mt-5">
    <h2 class="text-center">Şifremi Unuttum</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info text-center">
            @TempData["Message"]
        </div>
    }

    <form asp-action="ForgotPassword" method="post" class="w-50 mx-auto border p-4 rounded shadow bg-light">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-Posta</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresinizi girin">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Şifre Sıfırlama Bağlantısı Gönder</button>

        <div class="mt-3 text-center">
            <p>Hesabınız var mı? <a href="/Auth/Login">Giriş Yap</a></p>
        </div>
    </form>
</div>



@model ReservationCancelPageVm

@{
    ViewData["Title"] = Model.PageTitle;
}

<h2>@Model.PageTitle</h2>

<p>@Model.HelpText</p>

<p><strong>Rezervasyon ID:</strong> @Model.ReservationId</p>
<p><strong>Oda Numarası:</strong> @Model.RoomNumber</p>

<p>Bu rezervasyonu iptal etmek istediğinize emin misiniz?</p>

<form asp-action="ConfirmCancel" method="post">
    <input type="hidden" asp-for="ReservationId" />
    <button type="submit" class="btn btn-danger">Evet, İptal Et</button>
    <a asp-action="MyReservations" asp-controller="Reservation" class="btn btn-secondary">Hayır, Geri Dön</a>
</form>
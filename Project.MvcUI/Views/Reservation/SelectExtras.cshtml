@model Project.MvcUI.Models.PureVms.Reservations.RequestModels.SelectExtrasRequestModel

@{
    ViewData["Title"] = "Ekstra Hizmet Seçimi";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="SelectExtras" method="post">
    <input type="hidden" asp-for="ReservationId" />

    <div class="form-group">
        <label>Ekstra Hizmetler</label>
        <div>
            @if (ViewBag.ExtraServices != null)
            {
                foreach (var service in ViewBag.ExtraServices as List<SelectListItem>)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="ExtraServiceIds" value="@service.Value" id="service_@service.Value" />
                        <label class="form-check-label" for="service_@service.Value">@service.Text</label>
                    </div>
                }
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Seçimi Tamamla</button>
</form>

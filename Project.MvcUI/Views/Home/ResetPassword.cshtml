@model ResetPasswordRequestModel

@{
    ViewData["Title"] = "Şifre Yenile";
}

<h2 class="text-center">Şifre Yenile</h2>

<form asp-action="ResetPassword" asp-controller="Home" method="post" class="mt-4">
    <!-- Email ve Token Değerlerini Gizli Input Olarak Ekleyelim -->
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />

    <div class="form-group">
        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Yeni Şifre">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifre Tekrar">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block mt-3">Şifreyi Güncelle</button>
</form>

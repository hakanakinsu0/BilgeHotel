@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    .gallery-img {
        width: 100%; /* Kolonun tamamını kaplasın */
        height: 200px; /* Yükseklik sabit */
        object-fit: cover; /* Görselin içeriğini kırpmadan düzgün ölçeklendir */
        border-radius: 10px; /* Köşeleri yuvarlat */
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Hafif gölge efekti */
    }

    .reservation-btn {
        display: block;
        width: 200px;
        margin: 30px auto; /* Ortalamak için */
        text-align: center;
    }
</style>

<div class="container mt-5">
    <!-- Otel Hakkında Bilgi -->
    <div class="text-center mb-5">
        <h1 class="display-4">Bilge Hotel'e Hoş Geldiniz!</h1>
        <p class="lead">
            Konforlu odalarımız, eşsiz doğa manzarası ve mükemmel hizmetimizle sizleri ağırlamaktan mutluluk duyarız.
            Unutulmaz bir tatil deneyimi için Bilge Hotel'i tercih edin.
        </p>
    </div>

    <!-- Otel Görselleri (Galeri) -->
    <div class="row">
        <div class="col-md-3">
            <img src="~/OutherTools/img/gallery/11.jpg" class="gallery-img" alt="Otel Odası">
        </div>
        <div class="col-md-3">
            <img src="~/OutherTools/img/gallery/10.jpg" class="gallery-img" alt="Havuz">
        </div>
        <div class="col-md-3">
            <img src="~/OutherTools/img/gallery/9.jpg" class="gallery-img" alt="Restoran">
        </div>
        <div class="col-md-3">
            <img src="~/OutherTools/img/gallery/8.jpg" class="gallery-img" alt="Spa">
        </div>
    </div>

    <!-- Tek Buton: Rezervasyon Yap -->
    <div class="text-center">
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Reservation" asp-action="Create" class="btn btn-warning reservation-btn">Rezervasyon Yap</a>
        }
        else
        {
            <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="/Reservation/Create" class="btn btn-warning reservation-btn">Rezervasyon Yap</a>
        }
    </div>

</div>

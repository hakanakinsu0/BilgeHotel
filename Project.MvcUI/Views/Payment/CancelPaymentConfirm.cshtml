@model Project.MvcUI.Models.PureVms.Payments.RequestModels.PaymentCancelRequestModel

@{
    ViewData["Title"] = "Ödeme İptal Onayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>⚠️ Ödeme İptali</h2>
<p>Bu işlemi iptal etmek istediğinizden emin misiniz?</p>

<table class="table table-bordered">
    <tr>
        <th>📌 Kart Sahibi</th>
        <td>@Model.CardUserName</td>
    </tr>
    <tr>
        <th>💳 Kart Numarası</th>
        <td>@Model.CardNumber</td>
    </tr>
    <tr>
        <th>🏨 Oda Numarası</th>
        <td>@Model.RoomNumber</td>
    </tr>
    <tr>
        <th>💰 Ödeme Tutarı</th>
        <td>@Model.RefundAmount ₺</td>
    </tr>
</table>

<form asp-action="ConfirmCancelPayment" method="post">
    <input type="hidden" asp-for="ReservationId" />
    <input type="hidden" asp-for="CardUserName" />
    <input type="hidden" asp-for="CardNumber" />
    <input type="hidden" asp-for="CVV" />
    <input type="hidden" asp-for="RefundAmount" />

    <button type="submit" class="btn btn-danger">Evet, Ödemeyi İptal Et</button>
    <a asp-action="History" class="btn btn-secondary">Hayır, Vazgeç</a>
</form>


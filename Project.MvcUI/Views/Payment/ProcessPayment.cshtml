@model Project.MvcUI.Models.PureVms.Payments.RequestModels.PaymentProcessRequestModel

@{
    ViewData["Title"] = "💳 Ödeme Yap";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}


<h2>💳 Ödeme Yap</h2>
<p>Rezervasyonunuz için ödeme yapabilirsiniz.</p>

<form asp-action="ProcessPayment" method="post">
    <input type="hidden" asp-for="ReservationId" />

    <div class="mb-3">
        <label asp-for="CardUserName" class="form-label">Kart Sahibi</label>
        <input asp-for="CardUserName" class="form-control" value="@Model.CardUserName" required />
        <span asp-validation-for="CardUserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CardNumber" class="form-label">Kart Numarası</label>
        <input asp-for="CardNumber" class="form-control" placeholder="1111 2222 3333 4444" value="@Model.CardNumber" required />
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CVV" class="form-label">CVV</label>
        <input asp-for="CVV" class="form-control" maxlength="3" value="@Model.CVV" required />
        <span asp-validation-for="CVV" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <label asp-for="ExpiryMonth" class="form-label">Son Kullanım Ayı</label>
            <select asp-for="ExpiryMonth" class="form-control">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(i == Model.ExpiryMonth)">@i</option>
                }
            </select>
            <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ExpiryYear" class="form-label">Son Kullanım Yılı</label>
            <select asp-for="ExpiryYear" class="form-control">
                @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                {
                    <option value="@i" selected="@(i == Model.ExpiryYear)">@i</option>
                }
            </select>
            <span asp-validation-for="ExpiryYear" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="ShoppingPrice" class="form-label">Ödenecek Tutar</label>
        <input asp-for="ShoppingPrice" class="form-control" value="@Model.ShoppingPrice" readonly />
    </div>

    <button type="submit" class="btn btn-success mt-3"><i class="fas fa-credit-card"></i> Ödeme Yap</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
</form>
<script>
    document.querySelector("form").addEventListener("submit", function (event) {
        let cardNumber = document.querySelector("#CardNumber").value.trim();
        let cardUserName = document.querySelector("#CardUserName").value.trim();
        let cvv = document.querySelector("#CVV").value.trim();
        let expiryMonth = document.querySelector("#ExpiryMonth").value;
        let expiryYear = document.querySelector("#ExpiryYear").value;

        if (!cardUserName || !cardNumber || !cvv || !expiryMonth || !expiryYear) {
            alert("Lütfen tüm alanları doldurun!");
            event.preventDefault(); // Formu göndermeyi durdur
        }
    });
</script>

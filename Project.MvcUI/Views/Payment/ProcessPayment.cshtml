@model PaymentProcessPageVm

@{
    ViewData["Title"] = Model.PageTitle; // Sayfa başlığı PageVM'den alınıyor
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.PageTitle</h2>

@if (Model.PaymentProcessResponse != null && Model.PaymentProcessResponse.IsSuccess)
{
    <div class="alert alert-success">
        <strong>Başarılı!</strong> @Model.PaymentProcessResponse.Message
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>Hata!</strong> @Model.PaymentProcessResponse?.Message ?? "Ödeme sırasında bir hata oluştu."
    </div>
}

<div class="mt-3">
    <a asp-action="History" asp-controller="Payment" class="btn btn-primary">
        Ödeme Geçmişim
    </a>
    <a asp-action="Checkout" asp-controller="Payment" asp-route-reservationId="@Model.PaymentProcessRequest.ReservationId" class="btn btn-secondary">
        Ödemeyi Tekrar Dene
    </a>
</div>


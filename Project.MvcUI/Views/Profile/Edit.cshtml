@model UserProfileEditPageVm

@{
    ViewData["Title"] = Model.PageTitle;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
{
    <div asp-validation-summary="All" class="alert alert-danger mt-3"></div>
}

<div class="container mt-5">
    <h2 class="text-center">@Model.PageTitle</h2>
    <form asp-action="Edit" method="post" class="w-50 mx-auto border p-4 rounded shadow bg-light">
        <div class="mb-3">
            <label asp-for="UserProfileUpdate.FirstName" class="form-label">Ad</label>
            <input asp-for="UserProfileUpdate.FirstName" class="form-control" placeholder="Adınızı girin" />
            <span asp-validation-for="UserProfileUpdate.FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserProfileUpdate.LastName" class="form-label">Soyad</label>
            <input asp-for="UserProfileUpdate.LastName" class="form-control" placeholder="Soyadınızı girin" />
            <span asp-validation-for="UserProfileUpdate.LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserProfileUpdate.PhoneNumber" class="form-label">Telefon Numarası</label>
            <input asp-for="UserProfileUpdate.PhoneNumber" class="form-control" placeholder="Telefon numaranızı girin" />
            <span asp-validation-for="UserProfileUpdate.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserProfileUpdate.Address" class="form-label">Adres</label>
            <textarea asp-for="UserProfileUpdate.Address" class="form-control" placeholder="Adresinizi girin"></textarea>
            <span asp-validation-for="UserProfileUpdate.Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserProfileUpdate.Gender" class="form-label">Cinsiyet</label>
            <select asp-for="UserProfileUpdate.Gender" class="form-control">
                <option value="Male">Erkek</option>
                <option value="Female">Kadın</option>
                <option value="Other">Diğer</option>
            </select>
            <span asp-validation-for="UserProfileUpdate.Gender" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserProfileUpdate.Nationality" class="form-label">Uyruğunuz</label>
            <select asp-for="UserProfileUpdate.Nationality" class="form-control">
                <option value="">Lütfen seçiniz</option>
                <option value="Turk">Türk</option>
                <option value="Diger">Diğer</option>
            </select>
            <span asp-validation-for="UserProfileUpdate.Nationality" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserProfileUpdate.IdentityNumber" class="form-label">TC Kimlik Numarası</label>
            <input asp-for="UserProfileUpdate.IdentityNumber" class="form-control" placeholder="TC Kimlik Numaranızı girin" />
            <span asp-validation-for="UserProfileUpdate.IdentityNumber" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Güncelle</button>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
        </div>
    </form>
</div>

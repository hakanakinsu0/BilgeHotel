@model UserProfilePageVm

<div class="container mt-5">
    <h2 class="text-center">@Model.PageTitle</h2>
    <div class="card shadow p-4">
        <div class="mb-3">
            <label class="form-label"><strong>Ad Soyad:</strong></label>
            <p class="form-control">@Model.UserProfile.FirstName @Model.UserProfile.LastName</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>E-Posta:</strong></label>
            <p class="form-control">@Model.UserProfile.Email</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Telefon Numarası:</strong></label>
            <p class="form-control">@Model.UserProfile.PhoneNumber</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Adres:</strong></label>
            <p class="form-control">@Model.UserProfile.Address</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Uyruğunuz:</strong></label>
            <p class="form-control">@Model.UserProfile.Nationality</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Cinsiyet:</strong></label>
            <p class="form-control">
                @(Model.UserProfile.Gender == "Male" ? "Erkek" :
                    Model.UserProfile.Gender == "Female" ? "Kadın" :
                    Model.UserProfile.Gender == "Other" ? "Diğer" :
                    Model.UserProfile.Gender)
            </p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>TC Kimlik Numarası:</strong></label>
            <p class="form-control">@Model.UserProfile.IdentityNumber</p>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Edit" class="btn btn-warning">Profili Düzenle</a>
            <a asp-action="ChangePassword" class="btn btn-primary">Şifre Değiştir</a>
        </div>
    </div>
</div>

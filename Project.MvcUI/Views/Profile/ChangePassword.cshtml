@model ChangePasswordPageVm

@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container mt-5">
    <h2 class="text-center">@Model.PageTitle</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success text-center">
            @Model.SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger text-center">
            @Model.ErrorMessage
        </div>
    }

    <form asp-action="ChangePassword" method="post" class="w-50 mx-auto border p-4 rounded shadow bg-light">
        <div class="mb-3">
            <label asp-for="ChangePasswordRequest.CurrentPassword" class="form-label">Mevcut Şifre</label>
            <input asp-for="ChangePasswordRequest.CurrentPassword" type="password" class="form-control" placeholder="Mevcut şifrenizi girin" />
            <span asp-validation-for="ChangePasswordRequest.CurrentPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ChangePasswordRequest.NewPassword" class="form-label">Yeni Şifre</label>
            <input asp-for="ChangePasswordRequest.NewPassword" type="password" class="form-control" placeholder="Yeni şifrenizi girin" />
            <span asp-validation-for="ChangePasswordRequest.NewPassword" class="text-danger"></span>
            <small class="form-text text-muted">
                Şifre en az 6 karakter olmalı ve en az bir büyük harf, bir küçük harf ve bir rakam içermelidir.
            </small>
        </div>

        <div class="mb-3">
            <label asp-for="ChangePasswordRequest.ConfirmPassword" class="form-label">Yeni Şifre Tekrar</label>
            <input asp-for="ChangePasswordRequest.ConfirmPassword" type="password" class="form-control" placeholder="Yeni şifrenizi tekrar girin" />
            <span asp-validation-for="ChangePasswordRequest.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Şifreyi Değiştir</button>

        <div class="mt-3 text-center">
            <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Profil Sayfasına Dön</a>
        </div>
    </form>
</div>
